{
  "expo": {
    "name": "ForecastFlow",
    "slug": "forecast-flow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon-dark.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B1078"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png"
      },
      "permissions": [
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "usesCleartextTraffic": true
      },
      "package": "com.zafeerhafeez.forecastflow"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow ForecastFlow to use your location."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "3c143f8f-a8c5-44ea-a233-6f57dbc24998"
      }
    }
  }
}
